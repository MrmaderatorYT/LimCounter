<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/limValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lim"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/functionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введіть функцію тут"
        android:layout_below="@id/limValue"
        android:layout_margin="16dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:padding="10dp" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обчислити"
        android:layout_below="@id/functionInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#a2de9a"
        android:textColor="#FFFFFF" />

</RelativeLayout>